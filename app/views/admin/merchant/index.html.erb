<h1 align = "center">Merchants</h1>
<p align="center"><%= link_to "New Merchant", "/merchants/new" %></p>
<section class = "grid-container">
  <% @merchants.each do |merchant|%>
    <section class = "grid-item" id= 'merch-shop-<%=merchant.id%>'>
      <h2><%=link_to merchant.name, "/merchants/#{merchant.id}"%></h2>
      <% if current_admin? && merchant.active?%>
        <%= button_to 'disable', "/admin/merchant/disable", method: :patch %>
      <%# else %>
      <% end %>
    </section>
  <% end %>
</section>