<h1 align= "center">Register</h1>
<center>
  <%= form_tag '/register', method: :post do |f| %>

    <%= label_tag :name %>
    <%= text_field_tag :name %>

    <%= label_tag :address %>
    <%= text_field_tag :street_address %>

    <%= label_tag :city %>
    <%= text_field_tag :city %>

    <%= label_tag :state %>
    <%= text_field_tag :state %>

    <%= label_tag :zip_code %>
    <%= text_field_tag :zip_code %>

    <%= label_tag :email_address %>
    <%= text_field_tag :email_address %>

    <%= label_tag :password %>
    <%= password_field_tag :password %>

    <%= label_tag :confirm_password %>
    <%= password_field_tag :confirm_password %>

    <%= submit_tag 'Submit' %>
  <% end %>
</center>
