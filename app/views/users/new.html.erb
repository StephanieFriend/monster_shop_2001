<h1 align= "center">Register</h1>
<center>
  <%= form_for @user, :url => '/register', method: :post do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :address %>
    <%= f.text_field :street_address %>

    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.label :state %>
    <%= f.text_field :state %>

    <%= f.label :zip_code %>
    <%= f.text_field :zip_code %>

    <%= f.label :email_address %>
    <%= f.text_field :email_address, :value => "" %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :confirm_password %>
    <%= f.password_field :confirm_password %>

    <%= submit_tag 'Submit' %>
  <% end %>
</center>
