<h1><%="Logged in as #{current_user.name}"%></h1>
<%= @merchant.name %>
<%= @merchant.address %>
<%= @merchant.city %>
<%= @merchant.state %>
<%= @merchant.zip %>

<h2>My Orders</h2>
<% @merchant.pending_orders.each do |order| %>
<div id=<%=order.id%>>
  <ul>
    <li><%=link_to "Order ##{order.id}", "/merchant/orders/#{order.id}"%></li>
    <li>Created at: <%=order.created_at%></li>
    <li>Total Number of Items in the Order: <%=order.item_orders.sum(:quantity)%></li>
    <li>Total Value of Items in the Order: $<%=order.grandtotal%></li>
  </ul>
<%end%>
</div>
